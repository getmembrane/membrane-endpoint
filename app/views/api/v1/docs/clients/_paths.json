"/clients/{id}": {
  "get": {
    "description":"<%= basic_permission_table('| YES | YES | YES | YES | NO | YES |').html_safe %> <%= description('Returns a user information') %>",
    "summary": "Find client by ID",
    "tags": [
      "clients"
    ],
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "description": "id of Client",
        "required": true,
        "type": "integer"
      }
    ],
    "responses": {
      "200": {
        "schema": {
          "$ref": "#/definitions/Client/wrapped"
        }
      },
      "401": {
        "description": "Unauthorized",
        "schema": {
          "$ref": "#/definitions/UnauthorizedError"
        }
      },
      "404": {
        "description": "Not found",
        "schema": {
          "$ref": "#/definitions/NotFoundError"
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "$ref": "#/definitions/InternalServerError"
        }
      }
    }
  },
  "put": {
    "description":"<%= basic_permission_table('| YES | YES | YES | YES | NO | NO |').html_safe %> <%= description('Update an existing user') %>",
    "summary": "Update client profile",
    "tags": [
      "clients"
    ],
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "description": "Client ID",
        "required": true,
        "type": "integer"
      }
    ],
    "responses": {
      "200": {
        "schema": {
          "$ref": "#/definitions/Client/wrapped"
        }
      }
    }
  }
},
"/clients": {
  "post": {
    "description":"<%= basic_permission_table('| YES | YES | YES | YES | NO | NO |').html_safe %> <%= description('Creates User assigned to OrganizationAccount') %>",
    "summary": "Add a new client",
    "tags": [
      "clients"
    ],
    "parameters": [
      {
        "id": "client[id]",
        "in": "formData",
        "description": "id",
        "required": true,
        "type": "string"
      }
    ],
    "responses": {
      "201": {
        "description": "Client created",
        "schema": {
          "$ref": "#/definitions/Client/wrapped"
        }
      },
      "401": {
        "description": "Unauthorized",
        "schema": {
          "$ref": "#/definitions/UnauthorizedError"
        }
      },
      "422": {
        "description": "Validation errors",
        "schema": {
          "$ref": "#/definitions/UnprocessableEntityError"
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "$ref": "#/definitions/InternalServerError"
        }
      }
    }
  },
  "get": {
    "description":"<%= basic_permission_table('| YES | YES | YES | YES | NO | YES |').html_safe %> <%= description('Lists users matching given query') %>",
    "summary": "Clients list",
    "tags": [
      "clients"
    ],
    "parameters": [
      {
        "name": "page",
        "in": "query",
        "description": "Pagination page number",
        "required": false,
        "type": "integer"
      },
      {
        "name": "per_page",
        "in": "query",
        "description": "Pagination per_page limit, default: 20",
        "required": false,
        "type": "integer"
      },
      {
        "name": "query",
        "in": "query",
        "description": "Search query, fulltext search by: email",
        "required": false,
        "type": "string"
      }
    ],
    "responses": {
      "200": {
        "description": "All clients are listed",
        "schema": { "$ref": "#/definitions/Client/list" }
      },
      "401": {
        "description": "Unauthorized",
        "schema": {
          "$ref": "#/definitions/UnauthorizedError"
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "$ref": "#/definitions/InternalServerError"
        }
      }
    }
  }
}
