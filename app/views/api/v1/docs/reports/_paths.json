"/reports": {
  "post": {
    "description":"<%= basic_permission_table('| NO | NO | NO | YES |').html_safe %> <%= description('Creates Report') %>",
    "summary": "Add a new report",
    "tags": [
      "reports"
    ],
    "parameters": [
        {
            "name": "report[client_id]",
            "in": "formData",
            "description": "Abusing client",
            "required": true,
            "type": "string"
        },
        {
            "name": "report[accuracy]",
            "in": "formData",
            "description": "The propability of which client belongs to profile_id",
            "required": true,
            "type": "string"
        },
        {
            "name": "report[source]",
            "in": "formData",
            "description": "the site or app that is reporting",
            "required": true,
            "type": "string"
        },
        {
            "name": "report[content]",
            "in": "formData",
            "description": "The comment that was reported",
            "required": true,
            "type": "string"
        }
    ],
    "responses": {
      "201": {
        "description": "Report created",
        "schema": {
          "$ref": "#/definitions/Report/wrapped"
        }
      },
      "401": {
        "description": "Unauthorized",
        "schema": {
          "$ref": "#/definitions/UnauthorizedError"
        }
      },
      "422": {
        "description": "Validation errors",
        "schema": {
          "$ref": "#/definitions/UnprocessableEntityError"
        }
      },
      "500": {
        "description": "Internal server error",
        "schema": {
          "$ref": "#/definitions/InternalServerError"
        }
      }
    }
  }
}
